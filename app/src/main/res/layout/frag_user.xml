<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="#3DA39A"-->
    <!--个人页面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/head_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_default_user_head" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="点击登录"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorReddish_orange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Click_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_collection_goods"
            android:gravity="center"
            android:text="商品收藏"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_collection_store"
            android:gravity="center"
            android:text="店铺：0"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/My_Tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_footprint"
            android:gravity="center"
            android:text="我的足迹"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FAFAFA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@mipmap/ic_user_order"
        android:text="全部订单"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/non_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_pay"
            android:gravity="center"
            android:text="未付款"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/To_send_the_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_drive"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/wait_for_receiving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_receipt"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/remain_to_be_evaluated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_comment"
            android:gravity="center"
            android:text="待评价"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/sales_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_order_wait_refund"
            android:gravity="center"
            android:text="退货/款"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FAFAFA" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@mipmap/ic_user_property"
        android:text="我的财产"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prepaid_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_money"
            android:gravity="center"
            android:text="预存款"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/rechargeable_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_card"
            android:gravity="center"
            android:text="充值卡"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_vouchers"
            android:gravity="center"
            android:text="代金券"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_red"
            android:gravity="center"
            android:text="红包"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_user_property_integral"
            android:gravity="center"
            android:text="积分"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <TextView
        android:id="@+id/shipping_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@mipmap/ic_user_address"
        android:text="收货地址"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/system_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:drawableLeft="@mipmap/ic_user_setting"
        android:text="系统设置"
        android:textColor="@color/colorBlack" />


</LinearLayout>